{
  "name": "learn-hebrew-in-context",
  "version": "1.0.0",
  "description": "Chrome extension to learn Hebrew vocabulary in context while browsing",
  "main": "background.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "typecheck": "tsc --noEmit",
    "package": "npm run build && web-ext build --source-dir=dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/chrome": "^0.0.253",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.12.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "web-ext": "^7.8.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "idb": "^8.0.0"
  },
  "keywords": [
    "chrome-extension",
    "language-learning",
    "hebrew",
    "vocabulary",
    "education"
  ],
  "author": "Yehuda",
  "license": "MIT"
}
